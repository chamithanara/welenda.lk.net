                        </div>
                    </div>

                    @if (ViewBag.results != null)
                    {
                        foreach (KeyValuePair<string, List<string>> result in ViewBag.results)
                        {
                            <div class="col-md-4">
                                <a href="@Url.Action("Index", "Product", new {productdId=result.Key})">
                                    <div class="item">
                                        <div class="product">
                                            <div class="flip-container">
                                                <div class="flipper">
                                                    <div class="front">
                                                        <div href="detail.html">
                                                            <img ng-src="~/Content/img/@result.Value[1]" alt="" class="img-responsive">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div href="detail.html" class="invisible">
                                                <img ng-src="~/Content/img/@result.Value[1]" alt="" class="img-responsive">
                                            </div>
                                            <div class="text">
                                                <h3>@result.Value[0]</h3>
                                                <p class="priceStrike">Rs. @result.Value[2]</p>
                                                <p class="price">Rs. @result.Value[3]</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        }
                    }
                    else
                    {
                        <h1>No Products</h1>
                    }

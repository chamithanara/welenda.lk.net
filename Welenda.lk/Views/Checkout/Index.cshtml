            <div class="col-md-9" id="checkout">

                <div class="box">
                    <form method="post" action="checkout4.html">
                        <div class="box-header">
                            <h4>Order review</h4>
                        </div>

                        <div class="content">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th colspan="2">Product</th>
                                            <th>Quantity</th>
                                            <th>Unit price</th>
                                            <th>Discount</th>
                                            <th colspan="2">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{var total = 0;}
                                        @foreach (var productInfo in ViewBag.productsList)
                                        {
                                            var itemTotal = Convert.ToInt32(productInfo.product.newprice) * productInfo.quantity;
                                            total += itemTotal;
                                            <tr>
                                                <td>
                                                    <img src="~/@productInfo.product.imgurl" alt="White Blouse Armani">
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Index", "Product", new { productdId = productInfo.product.id})">@productInfo.product.title</a>
                                                </td>
                                                <td>
                                                    {{@productInfo.quantity}}
                                                </td>
                                                <td>{{@productInfo.product.newprice}}.00</td>
                                                <td>0.00</td>
                                                <td>{{@itemTotal}}.00</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <!--<tfoot>
                                        <tr>
                                            <th colspan="5">Total</th>
                                            <th colspan="2">{{@total}}.00</th>
                                        </tr>
                                    </tfoot>-->
                                </table>

